
{% extends 'base.html.twig' %}

{% block title %}edit sell{% endblock %}

{% block body %}
<div class="col-md-12">

<H1>
Edit sell
</H1>
 <form  class="form-control"  id="transaction_edit" method="POST" action="{{path('app_sell_udpate', {'id': sell.id} )}}"> 

<div class="row">
 <div class="form-group col-md-3">
  <label  class="label"> Client</label><br>
 <select name="contact" required class="form-control">
  {# <option >please select</option> #}
{%for contact in contacts %}
  <option value="{{contact.id}}" {% if (contact.id == sell.idContact.id  ) %}selected='selected'{% endif %}>{{contact.name}}</option>
  {%endfor%}
</select> 
</div>

 <div class="form-group col-md-3">
 <label  class="label"> Status</label><br>
 <select  name="status" required class="form-control" id="status">
 <option >please select</option>
{%for status in statuses %}
  <option value="{{status}}"  {% if (status == sell.status  ) %}selected='selected'{% endif %}>{{status}}</option>
  {%endfor%}
</select> 
</div>

 <div class="form-group col-md-3">
 <label  class="label"> Status payment</label><br>
 <select name="status_payment" class="form-control" id="status_payment">
{%for status_payment in status_payments %}
  <option class="status_payment" value="{{status_payment}}" disabled {% if (status_payment == sell.statusPayment  ) %}selected='selected'{% endif %} >{{status_payment}}</option>
  {%endfor%}
</select> 
</div>

<div class="form-group col-md-3">
 <label for="date_transaction">date transaction:</label>
    <input type="text" class="js-datetimePicker"name="date_transaction" value="{{sell.dateTransaction|date('Y-m-d') }}" id="date_transaction" class="form-control" />
</div>
</div>



    <input type="hidden" name="type" id="type" placeholder="type" value="sell" />
  

