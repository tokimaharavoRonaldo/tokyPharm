                        <input type="number" data-min="0" class="form-control input_number spl_qty_plaquette"  style="text-align: center;"
                               name="product[{{row_index}}][qty_plaquette]" min="0" value="1"> 
  
                        {# <span class="input-group-btn"><button type="button" class="btn btn-default btn-flat sh-quantity-up"><i class="fa fa-plus text-success"></i></button></span> #}
                    </div>
                    
                    <input type="hidden" class="spl_available_qty_carton" >
                    <input type="hidden" class="spl_available_qty_boite" >
                    <input type="hidden" class="spl_available_qty_plaquette" >
                </td>
    <td class="text-center">
        <input type="text" readonly name="product[{{row_index}}][price_carton]" class="form-control product_price_carton" style="text-align: center;" value="{{product['price_carton']}}">
        <input type="text" readonly name="product[{{row_index}}][price_boite]" class="form-control product_price_boite" style="text-align: center;" value="{{product['price_boite']}}">
        <input type="text" readonly name="product[{{row_index}}][price_plaquette]" class="form-control product_price_plaquette" style="text-align: center;" value="{{product['price_plaquette']}}">
    </td>
