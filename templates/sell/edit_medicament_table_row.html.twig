        <input type="text" readonly name="product[{{row_index}}][product_price_total]" class="form-control product_price_total" style="text-align: right;" value="{{product['price_plaquette']}}">
    </td>
    <td class="text-center"><i class="fa fa-times text-danger spl_remove_row cursor-pointer" aria-hidden="true"></i></td> 

