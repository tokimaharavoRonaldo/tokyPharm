<tr class="product_row">
    <td class="text-center">
        {{product['name']}}
        {# {{product['sku']}} #}
    </td>
    
    <input type="hidden" class="product_id" value="{{product['medicament_id']}}" name="product[{{row_index}}][product_id]"/>

     <td class="text-center">
                    <div class="input-group input-number">
                    <b  style="width:70px;">carton:</b>
                        {# <span class="input-group-btn"><button type="button" class="btn btn-default btn-flat sh-quantity-down"><i class="fa fa-minus text-danger"></i></button></span> #}
                        <input type="number" data-min="0" class="form-control input_number spl_qty_carton"  style="text-align: center;"
