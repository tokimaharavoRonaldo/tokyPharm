
{% extends 'base.html.twig' %}

{% block title %}Add client{% endblock %}

{% block body %}
  
<div class="col-md-9">
<H1>
add client
</H1>
</div>
 {{ form_start(form , { 'attr' : { 'class': 'form_contact' } }) }}
<div class="row">
   <div class="form-group col-md-4">
   {# {{form_row(form.name, {'label': 'name'}, {'attr': {'class': 'form-control'}})}} #}
    {{ form_label(form.surname) }}:
   {{form_widget(form.surname, {'attr': {'class': 'form-control','placeholder':'Mr/Mme/Mlle'}})}} 
    </div>
  <div class="form-group col-md-4">
   {# {{form_row(form.name, {'label': 'name'}, {'attr': {'class': 'form-control'}})}} #}
    {{ form_label(form.name) }}:
   {{form_widget(form.name, {'attr': {'class': 'form-control','placeholder':'Name','required':'true'}})}} 
    </div>
   
    <div class="form-group col-md-4">
       {{ form_label(form.contact) }}:
   {{form_widget(form.contact, {'attr': {'class': 'form-control','placeholder':'number phone','required':'true'}})}} 
   {# {{form_row(form.contact, {'label': 'contact'}, {'attr': {'class': 'form-control'}})}} #}
    </div>
   </div>

    <div class="form-group">
       {{ form_label(form.address) }}:
   {{form_widget(form.address, {'attr': {'class': 'form-control','placeholder':'address'}})}} 
   {# {{form_row(form.address, {'label': 'address'}, {'attr': {'class': 'form-control'}})}} #}
    </div>
 {{form_widget(form.type,{'value' : 'client'})}} 
 {{form_widget(form.is_entreprise,{'value' : 0})}} 

  <br>

<div class="d-flex  justify-content-end">
   <button type="submit" id="submit_form" class="btn btn-success pull-right">Add</button>
   </div>
{{ form_end(form) }} 


   


    {% endblock %}